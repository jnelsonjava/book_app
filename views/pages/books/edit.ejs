
<form action="/books/<%= book.id %>?_method=PUT" method="POST" style="display: none;">
  <legend>Update Book Details</legend>
  <input type="text" name="title" value="<%= book.title %>">
  <input type="text" name="author" value="<%= book.author %>">
  <input type="text" name="isbn" value="<%= book.isbn %>">
  <input type="text" name="cover" value="<%= book.cover %>">
  <!-- https://www.w3schools.com/html/html_form_elements.asp -->
  <textarea name="description"><%= book.description %></textarea>
  <!-- reference for making a dropdown input list that allows text input -->
  <!-- https://stackoverflow.com/questions/18309059/drop-down-menu-text-field-in-one -->
  <input list="categories" name="category" value="<%= book.category %>"/>
  <datalist id="categories">
    <% for (let cat of categories) { %>
      <option value="<%= cat %>">
    <% } %>
  </datalist>
  <input type="text" name="id" value="<%= book.id %>" style="display: none;">

  <input type="submit" value="Update Book">
</form>
